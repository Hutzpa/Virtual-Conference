@model LoginViewModel


<div class="modal fade" id="Login">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="LoginLabel">@Localizer["Login"]</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>X</span>
                </button>
            </div>


            <div class="modal-body">
                <form asp-controller="Auth" asp-action="Login" method="post">
                    <div class="form-group">
                        <label class="lead">@Localizer["Email"]</label>
                        <input asp-for="Email" />
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label class="lead">@Localizer["Password"]</label>
                        <input asp-for="Password" />
                        <span asp-validation-for="Password"></span>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">@Localizer["Close"]</button>
                <button type="button" class="btn btn-primary" data-save="modal">@Localizer["Login"]</button>
</div>
        </div>
    </div>
</div>

