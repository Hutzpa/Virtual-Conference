@model RoomViewModel


<h5>Admin</h5>

<section class="select">
    <label for="audioSource">Audio source: </label>
    <select id="audioSource"></select>
</section>

<section class="select">
    <label for="videoSource">Video source: </label>
    <select id="videoSource"></select>
</section>

<video playsinline autoplay muted></video>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.dev.js"></script>
<script charset="utf-8" src="~/js/roomadmin.js"></script>

<div class="container">
    <div class="py-5 text-center">
    </div>
    <div class="row">
        <input type="hidden" id="idEvent" name="idEvent" value="@Model.IdEvent" />
        <input type="hidden" id="idRoom" name="idRoom" value="@Model.IdRoom" />
        <div class="col-6">
            <!-- Форма для получения сообщений и имени -->
            <h3>Форма сообщений</h3>
            <form id="messForm">
                <label for="name">Имя</label>
                <input type="text" name="name" id="name" value="@Model.UserName _ @Model.UserSurname" disabled>

                <br>
                <label for="message">Сообщение</label>
                <textarea name="message" id="message" class="form-control" placeholder="Введите сообщение"></textarea>
                <br>

                <input type="submit" value="Отправить" class="btn btn-danger">
            </form>
        </div>
        <div class="col-6">
            <h3>Сообщения</h3>
            <!-- Вывод всех сообщений будет здесь -->
            <div id="all_mess"></div>
        </div>
    </div>
</div>

@*<script charset="utf-8" src="~/js/bundle.js"></script>*@
