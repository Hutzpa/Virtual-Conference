@model RoomViewModel



<div class="text-center">
    <form asp-controller="Event" asp-action="CreateRoom" method="post">
        <input asp-for="IdEvent" value="@Model.IdEvent" type="hidden" />
        <div id="Name" class="mb-4">
            <label class="lead">Room name</label>
            <input class="form-control" asp-for="RoomName" width="200"/>
            <span asp-validation-for="RoomName"></span>
        </div>
        <button type="submit" class="btn btn-success">Save</button>
    </form>
</div>
